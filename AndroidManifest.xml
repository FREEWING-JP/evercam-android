<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.evercam.androidapp"
    android:versionCode="13"
    android:versionName="1.1.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <!-- GCM connects to Google Services. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- To kow if connected to internet or not. -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- To know about phone state whether sleeping or awake etc. -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- To know about phone BT name -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <!-- To know mac address -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- Cache requires it. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Notification requires it. -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- Only used for auto filling user's profile when create account -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <!--
     Creates a custom permission so only this app can receive its messages.

     NOTE: the permission *must* be called PACKAGE.permission.C2D_MESSAGE,
           where PACKAGE is the application's package name.
    -->
    <permission
        android:name="io.evercam.android.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="io.evercam.android.permission.C2D_MESSAGE" />

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Main activity. -->
    <application
        android:name="EvercamPlayApplication"
        android:icon="@drawable/evercam_play_192x192"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >

        <!-- Theme.Black.NoTitleBar previous value -->
        <meta-data
            android:name="com.google.android.gms.analytics.globalConfigResource"
            android:resource="@xml/app_tracker" />

        <activity
            android:name="io.evercam.androidapp.video.VideoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="unspecified" >
        </activity>
        <activity
            android:name="io.evercam.androidapp.SlideActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/ThemeActivitySplash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:logo="@drawable/icon_192x192"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <!-- 
        <activity
            android:name=".ReleaseNotesActivity"
            android:label="@string/app_name" >
        </activity>
         -->
        <activity
            android:name=".custom.AboutDialog"
            android:label="@string/app_name"
            android:theme="@style/ThemeDialogNoTitle" >
        </activity>
        <!-- Theme.DeviceDefault.Dialog.NoActionBar.MinWidth -->

        <activity
            android:name=".rvideo.RVideoDateTimeDialog"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".rvideo.RVideoViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="unspecified" >
        </activity>
        <activity android:name=".ManageAccountsActivity" >
        </activity>
        <activity
            android:name=".CamerasActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".CameraPrefsActivity"
            android:label="Settings" >
        </activity>

        <!-- Video Showing Activities -->
        <!-- 
        <activity
            android:name=".ivideo.IVideoViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="unspecified" >
        </activity>
        <activity android:name=".ivideo.IVideoPrefsActivity" >
        </activity>
         -->
        <activity android:name=".video.VideoPrefsActivity" >
        </activity>
        <!-- 
        <activity
            android:name=".rtspvideo.RTSPVideoViewActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
 -->
        <!--
          BroadcastReceiver that will receive intents from GCM
          services and handle them to the custom IntentService.

          The com.google.android.c2dm.permission.SEND permission is necessary
          so only GCM services can send data messages for the app.
        -->
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="io.evercam.androidapp" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
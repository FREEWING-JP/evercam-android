<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <io.evercam.androidapp.onboarding.IntroTextureView
        android:id="@+id/intro_texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <Button
            style="@style/OnBoardingButton"
            android:layout_marginRight="15dp"
            android:text="@string/welcome_create_account"
            android:id="@+id/btn_welcome_signup"
            android:background="@drawable/signup_btn_selector"
            android:textColor="@drawable/signup_btn_txt_selector" />

        <Button
            android:text="@string/welcome_sign_in"
            android:id="@+id/btn_welcome_login"
            android:background="@drawable/btn_selector"
            android:layout_marginLeft="15dp"
            style="@style/OnBoardingButton" />

    </LinearLayout>

</FrameLayout>
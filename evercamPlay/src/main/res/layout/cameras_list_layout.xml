<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <io.evercam.androidapp.custom.CustomScrollView
        android:id="@+id/cameras_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <io.evercam.androidapp.custom.FlowLayout
            android:id="@+id/cameras_flow_layout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Child linear layouts will be created and inserted here dynamically -->

        </io.evercam.androidapp.custom.FlowLayout>

    </io.evercam.androidapp.custom.CustomScrollView>

    <include layout="@layout/float_action_button_layout"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@drawable/gradient_title"
        app:theme="@style/ToolbarTheme"/>

</RelativeLayout>